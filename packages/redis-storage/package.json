    "@types/jest": "^29.5.5",
    "@types/node": "^16.3.3",
    "@types/redis": "^2.8.31",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "it-all": "^1.0.6",
    "jest": "^29.5.0",
    "prettier": "^2.3.2",
    "redis-mock": "^0.56.3",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.1.0",
    "typescript": "^4.3.5"
  }
